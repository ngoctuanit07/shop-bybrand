?><?php if ($this->isCanShow()) : ?>
    <div class="shopbybrands-brand-page">

        <?php if ($this->getProductpageConfig() == AW_Shopbybrand_Model_Source_Displaymode_Productpage::DISPLAY_BRAND_NAME): ?>
            <a href="<?php echo $this->getBrandUrl(); ?>"
               title="<?php echo $this->escapeHtml($this->getBrand()->getTitle()); ?>">
                <span class="brand-name"><?php echo $this->escapeHtml($this->getBrand()->getTitle()); ?></span>
            </a>
        <?php endif; ?>

        <?php if ($this->getProductpageConfig() == AW_Shopbybrand_Model_Source_Displaymode_Productpage::DISPLAY_BRAND_LOGO): ?>
            <a href="<?php echo $this->getBrandUrl(); ?>"
               title="<?php echo $this->escapeHtml($this->getBrand()->getTitle()); ?>">
                <img class='display-both-image'
                     src="<?php echo $this->getImageUrl(50, 50); ?>"
                     width="50"
                     alt="<?php echo $this->escapeHtml($this->getBrand()->getTitle()); ?>"
                     title="<?php echo $this->escapeHtml($this->getBrand()->getTitle()); ?>"
                />
            </a>
        <?php endif; ?>

        <?php if ($this->getProductpageConfig() == AW_Shopbybrand_Model_Source_Displaymode_Productpage::DISPLAY_BOTH): ?>
            <div class="display-both">
                <a href="<?php echo $this->getBrandUrl(); ?>"
                   title="<?php echo $this->escapeHtml($this->getBrand()->getTitle()); ?>">
                    <img class='display-both-image'
                         src="<?php echo $this->getImageUrl(50, 50); ?>"
                         width="50"
                         alt="<?php echo $this->escapeHtml($this->getBrand()->getTitle()); ?>"
                         title="<?php echo $this->escapeHtml($this->getBrand()->getTitle()); ?>"/>
                    <span class="brand-name"><?php echo $this->escapeHtml($this->getBrand()->getTitle()); ?></span>
                </a>
            </div>
        <?php endif; ?>
    </div>
<?php endif; ?>
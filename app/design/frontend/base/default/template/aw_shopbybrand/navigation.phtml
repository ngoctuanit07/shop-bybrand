?><?php if ($menu = $this->getCategoriesMenu()): ?>
    <div id="aw_brands_menu_container" style="display: none">
        <li class="level0 nav-99 level-top last parent">
            <a href="<?php echo $this->getAllBrandsUrl(); ?>" class="level-top">
                <span><?php echo $this->getAllBrandsTitle(); ?></span>
            </a>
            <ul class="level0">
                <?php
                    $key = 1;
                    foreach ($menu as $item): ?>
                    <li class="level1 nav-99-<?php echo $key++; ?> <?php echo $key - 1 == 1 ? 'first' : ''; ?> <?php echo $key - 1 == $menu->getSize() ? 'last' : ''; ?>">
                        <a href="<?php echo $item->getUrl(); ?>">
                            <span><?php echo $item->getTitle(); ?></span>
                        </a>
                    </li>
                <?php endforeach;?>
            </ul>
        </li>
    </div>
    <script type="text/javascript">
        menu = $$('.nav-primary').first() ? $$('.nav-primary').first() : $('nav');
        if (menu) {
            menu.insert($('aw_brands_menu_container').innerHTML);
        }
    </script>
<?php endif; ?>